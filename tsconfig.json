{
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "downlevelIteration": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "module": "esnext",
        "jsx": "react"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}